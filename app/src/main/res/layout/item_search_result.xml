<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/isr_cv_style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/marginRight1"
        android:layout_marginLeft="@dimen/marginLeft1"
        android:layout_marginRight="@dimen/marginRight1"
        android:layout_marginStart="@dimen/marginLeft1"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="@dimen/radius_0">

        <RelativeLayout
            android:id="@+id/fs_rl_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_listitem">

            <RelativeLayout
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/height1"
                android:background="@color/background_listitem_dark"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/paddingLeft1"
                android:paddingRight="@dimen/paddingRight1">

                <TextView
                    android:id="@+id/tv_cebenhao"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:text="册本号"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_size_xxxxlarge" />

                <TextView
                    android:id="@+id/tv_separator_one"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_toEndOf="@id/tv_cebenhao"
                    android:layout_toRightOf="@id/tv_cebenhao"
                    android:gravity="center_vertical"
                    android:text="/"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_size_xxxxlarge" />

                <TextView
                    android:id="@+id/tv_biaokabh"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_toEndOf="@id/tv_separator_one"
                    android:layout_toRightOf="@id/tv_separator_one"
                    android:gravity="center_vertical"
                    android:text="表卡编号"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_size_xxxxlarge" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutripple_resultList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tableRow1"
                android:background="@color/background_clear"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/paddingLeft1"
                android:paddingRight="@dimen/paddingRight1"
                android:paddingTop="@dimen/paddingTop1">

                <TextView
                    android:id="@+id/yonghum"
                    android:layout_width="@dimen/width5"
                    android:layout_height="wrap_content"
                    android:text="@string/text_yonghum"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/text_size_meduim" />

                <TextView
                    android:id="@+id/tv_huming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/yonghum"
                    android:text=""
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/text_size_meduim" />

                <TextView
                    android:id="@+id/yonghudz"
                    android:layout_width="@dimen/width5"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_huming"
                    android:text="@string/text_yonghudz"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/text_size_meduim" />

                <TextView
                    android:id="@+id/tv_kehudz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_huming"
                    android:layout_toRightOf="@id/yonghudz"
                    android:text=""
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/text_size_meduim" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

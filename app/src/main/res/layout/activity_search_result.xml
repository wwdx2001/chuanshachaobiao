            android:layout_centerInParent="true"
            android:drawablePadding="20dp"
            android:drawableTop="@mipmap/ic_noresult"
            android:text="@string/label_noresult"
            android:textColor="@color/color8"
            android:textSize="@dimen/text_size_xxxlarge"
            android:visibility="gone" />

        <ListView
            android:id="@+id/lv_searchlist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_padding_top"
            android:cacheColorHint="@color/background_clear"
            android:divider="#00000000"
            android:dividerHeight="@dimen/list_divider_height"
            android:fadingEdge="none"
            android:listSelector="@android:color/transparent"
            android:overScrollMode="never"
            android:scrollbarStyle="outsideInset"/>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.remoteinspection_task.RemoteinSpectionTaskActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_15dp"
        android:paddingTop="@dimen/size_8dp"
        android:paddingRight="@dimen/size_15dp"
        android:paddingBottom="@dimen/size_8dp">

<!--        <TextView-->
<!--            android:id="@+id/tv_xunjian_task_time"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="@drawable/radius_press_circle_bg"-->
<!--            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"-->
<!--            android:gravity="center"-->
<!--            android:hint="派发时间"-->
<!--            android:paddingLeft="@dimen/dp_10"-->
<!--            android:paddingRight="@dimen/size_5dp"-->
<!--            android:textColor="@color/color_text_black"-->
<!--            android:textColorHint="@color/color_text_black"-->
<!--            android:textSize="@dimen/size_16sp" />-->

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_weight="1"
            android:background="@drawable/et_bg_white"
            android:hint="输入销根号或者地址查找"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLength="9"
            android:maxLines="1"
            android:paddingLeft="@dimen/size_10dp"
            android:paddingTop="@dimen/size_8dp"
            android:paddingRight="@dimen/size_10dp"
            android:paddingBottom="@dimen/size_8dp"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_xunjian_task_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10dp"
            android:gravity="right|center_vertical"
            android:text="记录数：0"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/size_14sp" />
    </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    >
    <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/add_data"
      android:text="添加数据" />
    <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/replace_data"
      android:text="更新数据" />
    <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/delete_data"
      android:text="删除数据" />
  </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_xujian_task"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/size_10dp"
    android:layout_marginRight="@dimen/size_10dp"
    android:padding="@dimen/size_10dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_15dp">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类　　型： "
            android:textSize="@dimen/size_15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/size_15sp"
            app:layout_constraintLeft_toRightOf="@+id/tv2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv2"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="外复日期： "
            android:layout_marginTop="@dimen/size_5dp"
            android:textSize="@dimen/size_15sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv2"
            app:layout_constraintTop_toBottomOf="@+id/tv_type" />

        <TextView
            android:id="@+id/tv_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autoSizeMaxTextSize="@dimen/size_16sp"
            android:autoSizeMinTextSize="8sp"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:text="1997-01-01 00:00:00"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/size_15sp"
            app:layout_constraintLeft_toRightOf="@+id/tv1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv1"/>



        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5dp"
            android:text="处理结果： "
            android:textSize="@dimen/size_15sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv1"
            app:layout_constraintTop_toBottomOf="@+id/tv_data" />

        <TextView
            android:id="@+id/tv_chulijg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/size_15sp"
            app:layout_constraintLeft_toRightOf="@+id/tv3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv3" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5dp"
            android:gravity="right"
            android:text="外复原因： "
            android:textSize="@dimen/size_15sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv3"
            app:layout_constraintRight_toRightOf="@+id/tv3"
            app:layout_constraintTop_toBottomOf="@+id/tv_chulijg" />

        <TextView
            android:id="@+id/tv_reason"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/size_15sp"
            app:layout_constraintLeft_toRightOf="@+id/tv4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv4" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
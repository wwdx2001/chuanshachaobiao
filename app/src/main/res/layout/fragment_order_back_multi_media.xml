<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp_10"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/color_white_ffffff"
            android:paddingLeft="@dimen/dp_25"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="照片"
            android:textColor="@color/color_gray_33" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_type1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/color_white_ffffff"
            android:choiceMode="singleChoice"
            android:divider="@null"
            android:fadingEdge="none"
            android:padding="@dimen/dp_15"
            android:scrollbarStyle="outsideOverlay"
            app:layoutManager="android.support.v7.widget.GridLayoutManager"
            app:spanCount="3" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.sh3h.meterreading.ui.custom_view.VoiceView
                android:id="@+id/voice_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@null"
                android:button="@null"
                android:background="@mipmap/ic_mic_black_18dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/color_white_ffffff"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="录音"
                android:textColor="@color/color_gray_33" />

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_type2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/color_white_ffffff"
            android:choiceMode="singleChoice"
            android:divider="@null"
            android:fadingEdge="none"
            android:padding="@dimen/dp_15"
            android:scrollbarStyle="outsideOverlay"
            app:layoutManager="android.support.v7.widget.GridLayoutManager"
            app:spanCount="3" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_white_ffffff"
            android:paddingLeft="@dimen/dp_25"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="视频"
            android:textColor="@color/color_gray_33" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_type3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/color_white_ffffff"
            android:choiceMode="singleChoice"
            android:divider="@null"
            android:fadingEdge="none"
            android:padding="@dimen/dp_15"
            android:scrollbarStyle="outsideOverlay"
            app:layoutManager="android.support.v7.widget.GridLayoutManager"
            app:spanCount="3" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

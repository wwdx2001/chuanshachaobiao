<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/bg_main"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingBottom="16px"
        android:paddingLeft="@dimen/list_padding_horizontal"
        android:paddingRight="@dimen/list_padding_horizontal"
        android:paddingTop="16px">

        <ListView
            android:id="@+id/chaobiao_dialog_list1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:cacheColorHint="@color/background_clear"
            android:divider="@null"
            android:fadingEdge="none"
            android:fastScrollEnabled="true"
            android:focusable="true"
            android:listSelector="@android:color/transparent"
            android:overScrollMode="never" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:background="@color/line_textview_bottom" />

        <ListView
            android:id="@+id/chaobiao_dialog_list2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="@color/background_clear"
            android:divider="@drawable/ic_line"
            android:fadingEdge="none"
            android:fastScrollEnabled="true"
            android:focusable="true"
            android:listSelector="@drawable/list_item"
            android:overScrollMode="never"
            android:paddingLeft="@dimen/list_padding_horizontal" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/sp_line_2"
        android:background="@color/line_white" />

    <LinearLayout
        android:id="@+id/dialog_footer"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_weight="0"
        android:gravity="center">

        <Button
            android:id="@+id/btnSubmit"
            style="@style/Button8"
            android:text="@string/text_ok" />

        <Button
            android:id="@+id/btnCancel"
            style="@style/Button8"
            android:layout_marginLeft="@dimen/marginLeft1"
            android:text="@string/text_cancel" />

        <Button
            android:id="@+id/btnSort"
            style="@style/Button8"
            android:layout_marginLeft="@dimen/marginLeft1"
            android:text="@string/text_sort" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <EditText
        android:id="@+id/dcr_et_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textColor="@color/color3"
        android:textSize="@dimen/text_size_xlarge"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"/>

    <RadioGroup
        android:id="@+id/dcr_rg_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginLeft_15"
        android:orientation="horizontal">
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10">

        <RadioButton
            android:id="@+id/dcr_rb_cardId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="@string/text_card_id" />

        <RadioButton
            android:id="@+id/dcr_rb_order_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_order_number" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/dcr_rg_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginLeft_15"
        android:orientation="horizontal">
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10">


        <RadioButton
            android:id="@+id/dcr_rb_front"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="@string/text_front" />

        <RadioButton
            android:id="@+id/dcr_rb_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_back" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1"
        android:background="@color/divider_line"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"/>

    <ListView
        android:id="@+id/dcr_list"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_300"
        android:layout_marginTop="@dimen/list_padding_top"
        android:cacheColorHint="@color/background_clear"
        android:divider="#00000000"
        android:dividerHeight="@dimen/list_divider_height"
        android:fadingEdge="none"
        android:listSelector="@android:color/transparent"
        android:overScrollMode="never"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"/>

</LinearLayout>
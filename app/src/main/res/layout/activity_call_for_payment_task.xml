<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.urge.CallForPaymentTaskActivity">

  <LinearLayout
      android:id="@+id/search_ll"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingStart="@dimen/dp_4"
      android:paddingTop="@dimen/dp_6"
      android:paddingEnd="@dimen/dp_4"
      android:paddingBottom="@dimen/dp_6"
      android:background="@color/white"
      android:gravity="center_vertical"
      tools:ignore="MissingConstraints">

    <EditText
        android:id="@+id/call_for_pay_task_search_et"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:paddingLeft="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_4"
        android:background="@drawable/et_bg_gray"
        android:hint="@string/call_for_pay_word_order_list_search_hint_text"
        android:imeOptions="actionDone"
        android:inputType="textMultiLine"
        android:textSize="@dimen/sp_18"
        android:autoSizeMaxTextSize="@dimen/sp_18"
        android:autoSizeMinTextSize="@dimen/sp_14"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/call_for_pay_task_search_btn"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/dp_4"
        android:text="@string/search_text"
        android:textSize="@dimen/dp_14"
        android:textColor="@color/motor_blue_plate_text_color"
        android:gravity="center"
        android:onClick="onClick"
        android:background="@drawable/call_for_pay_word_order_search_btn_bg"
        />

    <TextView
        android:id="@+id/call_for_pay_task_resetting_btn"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/dp_4"
        android:text="@string/resetting_text"
        android:textSize="@dimen/dp_14"
        android:textColor="@color/gray3"
        android:gravity="center"
        android:onClick="onClick"
        android:background="@drawable/call_for_pay_word_order_resetting_btn_bg"
        />

  </LinearLayout>

  <android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/call_for_pay_srl"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@+id/search_ll"
    app:layout_constraintBottom_toBottomOf="parent"
    >

    <android.support.v7.widget.RecyclerView
      android:id="@+id/call_for_pay_task_rv"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="vertical" />
  </android.support.v4.widget.SwipeRefreshLayout>

</android.support.constraint.ConstraintLayout>
